<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtNumTelefono"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="307dp"
        android:ems="10"
        android:hint="Numero de Telefono"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/btnTakeSaveAction"
        app:layout_constraintEnd_toStartOf="@+id/btnLlamadaAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnLlamadaAction"
        android:layout_width="84dp"
        android:layout_height="42dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNumTelefono"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/stat_sys_speakerphone" />

    <ImageView
        android:id="@+id/imgCameraAction"
        android:layout_width="387dp"
        android:layout_height="238dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="341dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/btnTakeSaveAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="293dp"
        android:text="TAKE AND SAVE"
        app:icon="@android:drawable/ic_menu_save"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumTelefono" />

    <Button
        android:id="@+id/btnOpenGalery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="OPEN GALERY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTakeSaveAction" />

</androidx.constraintlayout.widget.ConstraintLayout>